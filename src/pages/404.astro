---
import BaseLayout from "@/layouts/base-layout.astro";
import { defaultLang, useTranslations } from "@/utils/i18n";

const t = useTranslations(defaultLang);
---

<BaseLayout title="404" description={t("pageNotFoundDescription")}>
  <div class="w-full flex flex-col items-center justify-center mt-32">
    <h1 class="text-9xl mb-5 font-black text-dracula-pink font-mono">404</h1>
    <p class="text-4xl font-bold">{t("pageNotFound")}</p>
    <a
      href="/"
      class="text-lg underline underline-offset-4 text-dracula-cyan mt-10
                hover:text-dracula-purple transition-colors"
    >
      {t("goBackHome")}
    </a>
  </div>
</BaseLayout>
